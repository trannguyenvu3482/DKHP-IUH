{
  "name": "Tool đăng kí học phần - By Duz 📅",
  "description": "Extension dùng để hỗ trợ đăng kí học phần cho sinh viên IUH",
  "version": "0.6.9",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://dkhp.iuh.edu.vn/*", "https://sv.iuh.edu.vn/*"],
      "js": ["app.js"]
    }
  ]
}
